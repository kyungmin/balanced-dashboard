<div class="summary">
	{{#if view.status}}
		<div class="status">
			<h3 {{bind-attr class=":status view.status"}}>
				{{capitalize view.status}}
			</h3>

			{{#if view.statusText}}
				<p>
					{{view.statusText}}

					{{#if view.learnMore}}
						<a {{action "toggleDrawer" view.learnMore.className}}>Learn more</a>
					{{/if}}
				</p>
			{{/if}}

			{{#if view.statusButtonModalView}}
				<a class="btn sm pull-left" {{action "openModal" view.statusButtonModalView view.model}}>
					{{view.statusButtonText}}
				</a>
			{{/if}}

			{{#if view.learnMore}}
				<p {{bind-attr class=":drawer view.learnMore.className"}}>
					{{view.learnMore.text}}
				</p>
			{{/if}}
		</div>
	{{/if}}

	{{#if view.linkedResources}}
		<dl class="linked-resources">
			{{#each linkedResource in view.linkedResources}}
				<dt>
					<i {{bind-attr class="linkedResource.className :non-interactive"}}></i>
					{{linkedResource.title}}
				</dt>
				<dd>
					{{#link-to linkedResource.resource.route_name linkedResource.resource title=linkedResource.hoverValue}}
						{{linkedResource.value}}
					{{/link-to}}
				</dd>
			{{/each}}
		<dl>
	{{/if}}
</div>
