{{#view Balanced.TransactionPageNavigationView model=model}}
	<div class="buttons page-actions">
		{{#if can_void_or_capture}}
			{{capture-hold-modal hold=model}}
			{{void-hold-modal hold=model}}
		{{/if}}
	</div>
{{/view}}

{{#view Balanced.BodyPanelView}}
	{{#view Balanced.SidePanelView model=model}}
		{{view Balanced.HoldSummarySectionView model=model}}
		{{view Balanced.TransactionTitledKeyValuesSectionView model=model}}
		{{view Balanced.MetaView type=model}}
	{{/view}}

	{{#view Balanced.MainPanelView}}
		<h3>Logs</h3>
		<div class="results">
			{{view Balanced.ResourceLogsView content=model}}
		</div>

		<h3>Events</h3>
		<div class="results">
			{{view Balanced.ResourceEventsView content=model}}
		</div>
	{{/view}}
{{/view}}
