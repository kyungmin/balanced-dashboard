<div class="modal wide-modal hide" id="refund-debit">
    <form class="form-horizontal split-labels" {{action "save" on="submit"}}>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <h2>Refund this customer</h2>
        </div>
        <div class="modal-body">
            {{partial "modals/modalErrors"}}

            <div class="control-group">
                <label class="control-label">Customer</label>
                <div class="controls">
                    <span class="label1a">{{debit.customer.display_me}} ({{debit.customer.email}})</span>
                </div>
            </div>

            <div {{bind-attr class=":control-group model.validationErrors.amount:error"}}>
                <label class="control-label">Amount</label>
                <div class="controls">
                    <div class="input-prepend">
                        {{#if isUSD}}
                            <span class="add-on">$</span>
                            {{view Ember.TextField valueBinding="dollar_amount" name="dollar_amount" class="span3"}}
                        {{else}}
                            <span class="add-on">{{debit.captured_currency}}</span>
                            {{view Ember.TextField valueBinding="debit.amount_in_captured_currency" name="dollar_amount" class="span3"}}
                        {{/if}}
                    </div>
                    <div class="input-note">
                        <span>{{formatCapturedCurrency debit.amount_in_captured_currency debit.captured_currency}} = USD {{dollar_amount}}</span>
                    </div>
                </div>
            </div>

            <div {{bind-attr class=":control-group model.validationErrors.description:error"}}>
                <label class="control-label">Internal Description</label>
                <div class="controls">
                    {{view Ember.TextField valueBinding="model.description" name="description" class="full" maxlengthBinding="Balanced.MAXLENGTH.DESCRIPTION"}}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            {{view Balanced.ModalActionButtonsView submitTitle="Refund"}}
        </div>
    </form>
</div>
<a class="btn refund-debit-button" {{action "open"}}>Refund</a>
