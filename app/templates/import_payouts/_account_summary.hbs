<div class="table-summary">
	<table class="table">
		<tbody>
		  <tr>
			<td>Current escrow balance</td>
			<td class="number3a column-total">{{formatCurrency view.escrowTotal}}</td>

		  </tr>
		  <tr>
			<td>Total payouts</td>
			<td class="number3a column-total">{{formatCurrency view.payoutTotal}}</td>
		  </tr>
		  <tr>
			<td>Escrow balance after payouts</td>
			<td {{bind-attr class=":number3a :column-total view.isEscrowValid::column-error"}}>{{formatCurrency view.escrowDifference}}</td>
		  </tr>
		</tbody>
	</table>
</div>

{{#unless view.isEscrowValid}}
	<div class="form-footer">
		<div class="pull-right">
			<button class="btn secondary" {{action "reset" target="view"}}>Back</button>
			<button class="add-funds-btn" {{action "openModal" Balanced.CreateEscrowCreditModalView}}>Add funds</button>

		</div>

		<div class="message-error">
			<p>You do not have sufficient funds in escrow to submit this payout. Add funds to proceed.</p>
		</div>
	</div>
{{/unless}}
