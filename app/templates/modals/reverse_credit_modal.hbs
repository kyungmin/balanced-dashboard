<form class="form-horizontal split-labels" {{action "save" on="submit" target=view}}>
	<div class="modal-body">
		{{view Balanced.FormFields.StaticTextModalFormFieldView
			label="Customer"
			displayText=view.customerDisplay
			emptyText="No customer"
		}}

		{{#view Balanced.FormFields.ModalFormFieldView model=view.model fieldName="dollar_amount" label="Amount"}}
			<div class="input-prepend">
				<span class="add-on">$</span>
				{{view Ember.TextField value=view.value class="span3" name="dollar_amount" viewName="inputElement"}}
			</div>
		{{/view}}

		{{#view Balanced.FormFields.ModalFormFieldView model=view.model fieldName="description" label="Internal description"}}
			{{view Ember.TextField name="description" value=view.value class="full" maxlength=Balanced.MAXLENGTH.DESCRIPTION viewName="inputElement"}}
		{{/view}}
	</div>

	<div class="modal-informational">
		<p class="modal-informational-content">A credit reversal will take 4-5 business days to process. The reversal status will update to "succeeded" or "failed".</p>
	</div>

	<div class="modal-footer">
		<button class="btn secondary" type="button" name="modal-cancel" data-dismiss="modal" aria-hidden="true" {{bind-attr disabled="view.isSaving"}}>Cancel</button>
		<button class="btn" type="submit" name="modal-submit" {{bind-attr disabled="view.isSaving"}}>Reverse</button>
	</div>
</form>
