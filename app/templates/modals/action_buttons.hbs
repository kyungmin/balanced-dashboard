<button class="btn secondary" type="button" name="modal-cancel" data-dismiss="modal" aria-hidden="true" {{bind-attr disabled="view.isSubmitting"}}>Cancel</button>
<button {{bind-attr class=":btn view.isSubmitting:disabled"}} type="submit" name="modal-submit" {{bind-attr disabled="view.isSubmitting"}}>{{view._submitTitle}}</button>
