<form class="form-horizontal split-labels" {{action "save" on="submit" target=view}}>
	<div class="modal-body">
		<div class="control-group">
			<label class="control-label">Internal description</label>
			<div class="controls">
				{{view Ember.TextField name="description" value=view.model.description class="full" maxlength=Balanced.MAXLENGTH.DESCRIPTION}}
			</div>
		</div>
	</div>
	{{view Balanced.Modals.ModalBaseFooter isSaving=view.isSaving submitButtonText="Edit"}}
</form>
