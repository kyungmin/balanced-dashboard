{{render "modal_notification_center"}}
<div class="modal-header">
	<a class="close" data-dismiss="modal"><i class="icon-x"></i></a>
	{{#if view.logo}}
		<div class="balanced-logo-24"></div>
	{{/if}}
	<h2>{{view.title}}</h2>
	{{#if view.subtitle}}
		<h3>{{view.subtitle}}</h3>
	{{/if}}
	{{#if view.description}}
		<p class="description">{{view.description}}</p>
	{{/if}}
</div>
<form {{action "save" on="submit" target=view}}>
	<div class="modal-body clearfix">
		{{yield}}
	</div>
	{{view Balanced.Modals.ModalBaseFooter isSaving=view.isSaving cancelButtonText=view.cancelButtonText submitButtonText=view.submitButtonText}}
</form>
