{{render "modal_notification_center"}}
<div class="modal-header">
	<a class="close" data-dismiss="modal"><i class="icon-x"></i></a>
	<h2>{{view.title}}</h2>
	{{#if view.subtitle}}
		<h3>{{view.subtitle}}</h3>
	{{/if}}

</div>
<form {{action "save" on="submit" target=view}}>
	<div class="modal-body clearfix">
		{{yield}}
	</div>
	{{view Balanced.Modals.ModalBaseFooter isSaving=view.isSaving submitButtonText=view.submitButtonText}}
</form>
