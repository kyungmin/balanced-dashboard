<table class="items">
	<thead>
		<tr>
			<th class="span3 date">
				<span>Date</span>
			</th>
			<th class="span3 status">
				<span>Status</span>
			</th>
			<th class="span9 event"><span>Event name</span></th>
		</tr>
	</thead>
	<tbody>
	{{#each event in view.content.events}}
		<tr>
			{{view Balanced.LinkedDateCellView
				item=event
				classNames="span3"
				routeName=event.route_name
				date=event.occurred_at
			}}
			<td class="status">
				{{#link-to 'events' event}}
					<span {{bind-attr class="event.status"}}>{{event.status}}</span>
				{{/link-to}}
			</td>
			<td>
				{{#link-to 'events' event}}
					<span>{{event.type}}</span>
				{{/link-to}}
			</td>
		</tr>
	{{else}}
		<tr>
			<td colspan="3" class="no-results">
				{{#if view.content.isLoaded}}
					No results
				{{else}}
					Loading...
				{{/if}}
			</td>
		</tr>
	{{/each}}
	</tbody>
</table>
