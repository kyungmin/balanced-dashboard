<nav>
    <li {{bindAttr class=":accounts view.searchResult.total_orders::disabled view.ordersTabSelected:selected"}} >
        {{#if view.searchResult.total_orders}}
            <a href="#" {{action changeTypeFilter "order"}}> Orders ({{ formatNumber view.searchResult.total_orders }}) </a>
        {{else}}
            <a>Orders (0)</a>
        {{/if}}
    </li>

    <li {{bindAttr class=":transactions :filter view.searchResult.total_transactions::disabled view.transactionsTabSelected:selected"}} >
        {{#if view.searchResult.total_transactions}}
            <a href="#" {{action changeTypeFilter "search"}}>{{ view.transaction_type_label }} ({{ formatNumber view.transaction_type_total }}) </a>
        {{else}}
            <a>Transactions (0)</a>
        {{/if}}
        <div class="selector dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
            <ul class="dropdown-menu transaction-filter filter-choices">
                <li><a href="#" {{action changeTypeFilter "search"}} {{bindAttr label="view.totalTransactionsHeader"}}>All ({{ view.searchResult.total_transactions }})</a></li>
                {{#if view.searchResult.total_card_holds }}
                    <li><a href="#" {{action changeTypeFilter "card_hold"}}> Holds ({{ view.searchResult.total_card_holds }}) </a></li>
                {{else}}
                    <li class="disabled"><a>Holds ({{ view.searchResult.total_card_holds }})</a></li>
                {{/if}}

                {{#if view.searchResult.total_debits }}
                    <li><a href="#" {{action changeTypeFilter "debit"}}> Debits ({{ view.searchResult.total_debits }}) </a></li>
                {{else}}
                    <li class="disabled"><a>Debits ({{ view.searchResult.total_debits }})</a></li>
                {{/if}}

                {{#if view.searchResult.total_credits }}
                    <li><a href="#" {{action changeTypeFilter "credit"}}> Credits ({{ view.searchResult.total_credits }}) </a></li>
                {{else}}
                    <li class="disabled"><a>Credits ({{ view.searchResult.total_credits }})</a></li>
                {{/if}}

                {{#if view.searchResult.total_refunds }}
                    <li><a href="#" {{action changeTypeFilter "refund"}}> Refunds ({{ view.searchResult.total_refunds }}) </a></li>
                {{else}}
                    <li class="disabled"><a>Refunds ({{ view.searchResult.total_refunds }})</a></li>
                {{/if}}
            </ul>
        </div>
    </li>

    <li {{bindAttr class=":customers view.searchResult.total_customers::disabled view.customersTabSelected:selected"}} >
        {{#if view.searchResult.total_customers}}
            <a href="#" {{action changeTypeFilter "customer"}}> Customers ({{ formatNumber view.searchResult.total_customers }}) </a>
        {{else}}
            <a>Customers (0)</a>
        {{/if}}
    </li>

    <li {{bindAttr class=":funding-instruments :filter view.searchResult.total_funding_instruments::disabled view.fundingInstrumentsTabSelected:selected"}} >
        {{#if view.searchResult.total_funding_instruments}}
            <a href="#" {{action changeTypeFilter "funding_instrument"}}> {{ view.funding_instrument_type_label }} ({{ formatNumber view.funding_instrument_type_total }}) </a>
        {{else}}
            <a>Cards &amp; Bank Accounts (0)</a>
        {{/if}}

        <div class="selector dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
            <ul class="dropdown-menu funding-instruments-filter filter-choices">
                <li><a href="#" {{action changeTypeFilter "funding_instrument"}} {{bindAttr label="view.totalFundingInstrumentsHeader"}}> Both ({{ view.searchResult.total_funding_instruments }}) </a></li>

                {{#if view.searchResult.total_cards }}
                    <li><a href="#" {{action changeTypeFilter "card"}}> Cards ({{ view.searchResult.total_cards }}) </a></li>
                {{else}}
                    <li class="disabled"><a>Cards (0)</a></li>
                {{/if}}

                {{#if view.searchResult.total_bank_accounts }}
                    <li><a href="#" {{action changeTypeFilter "bank_account"}}> Bank Accounts ({{ view.searchResult.total_bank_accounts }}) </a></li>
                {{else}}
                    <li class="disabled"><a>Bank Accounts (0)</a></li>
                {{/if}}
            </ul>
        </div>
    </li>
    <li class="timing dropdown label4a">
        {{view Balanced.DatePickerView viewName="dateTimePicker" }}
    </li>
    {{#if view.show_download_button}}
    <li class="download">
        {{view Balanced.DownloadModalView}}
    </li>
    {{/if}}
</nav>
