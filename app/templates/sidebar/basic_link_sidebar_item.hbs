{{#link-to view.routeName activeBinding="view.isSelected" classBinding="view.childViewItems.length:expanded"}}
	{{#if view.linkIcon}}
		<i {{bind-attr class="linkIcon"}}></i>
	{{/if}}
	<span>{{view.linkText}}</span>
	{{#if view.alertCount}}
		<div class="alert-count">{{view.parentView.alertCount}}</div>
	{{/if}}
{{/link-to}}

{{#if view.childViewItems.length}}
	<ul {{bind-attr class=":submenu view.isSelected:expanded"}}>
		{{#each childView in view.childViewItems}}
			{{view childView}}
		{{/each}}
	</ul>
{{/if}}
